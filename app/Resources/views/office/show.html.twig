{% extends 'base.html.twig' %}

{% block body %}
    <h1>Office</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ office.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ office.description }}</td>
            </tr>
            <tr>
                <th>Plceid</th>
                <td>{{ office.plceId }}</td>
            </tr>
            <tr>
                <th>Offischedule</th>
                <td>{{ office.offiSchedule }}</td>
            </tr>
            <tr>
                <th>Offiname</th>
                <td>{{ office.offiName }}</td>
            </tr>
            <tr>
